{% extends 'base.html.twig' %}

{% block title %}Team index{% endblock %}

{% block body %}

    <div class="jumbotron">
        <div class="container">
            <h1>Liste des équipes</h1>
            <a class="btn btn-success" href="{{ path('team_new') }}">Créer une nouvelle équipe</a>
        </div>
    </div>

    <div class="container">
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>AvatarPath</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.id }}</td>
                <td>{{ team.name }}</td>
                <td><img src=".assets/img/{{ team.avatarPath }}"></td>
                <td>
                    <a class="btn btn-primary" href="{{ path('team_show', {'id': team.id}) }}">show</a>
                    <a class="btn btn-secondary" href="{{ path('team_edit', {'id': team.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
