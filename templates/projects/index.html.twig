{% extends 'base.html.twig' %}

{% block title %}Projects index{% endblock %}

{% block body %}
    <style>
        body{
            background-color: white;
        }
        div.imgHeader{
            background-color: #653484;
        }
        img{
            width: 60px;
            height: auto;
        }</style>
    <div class="jumbotron">
        <div class="container">
            <h1>Liste des projets</h1>
            <a class="btn btn-success" href="{{ path('projects_new') }}">Créer un nouveau projet</a>
        </div>
    </div>

    <div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>GitLabId</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.gitLabId }}</td>
                <td>{{ project.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('projects_show', {'gitLabId': project.gitLabId}) }}">Détails</a>
                    <a class="btn btn-secondary" href="{{ path('projects_edit', {'gitLabId': project.gitLabId}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
