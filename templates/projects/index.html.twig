{% extends 'base.html.twig' %}

{% block title %}Projects index{% endblock %}

{% block body %}
    <style>
        body{
            background-color: white;
        }
        div.imgHeader{
            background-color: #653484;
        }
        img{
            width: 60px;
            height: auto;
        }</style>
    <h1>Projects index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>GitLabId</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.gitLabId }}</td>
                <td>{{ project.name }}</td>
                <td>
                    <a href="{{ path('projects_show', {'gitLabId': project.gitLabId}) }}">show</a>
                    <a href="{{ path('projects_edit', {'gitLabId': project.gitLabId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('projects_new') }}">Create new</a>
{% endblock %}
