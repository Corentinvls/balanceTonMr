<!doctype html>

<table>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Project ID</th>
            <th>Title</th>
            <th>Date</th>
            <th>Author</th>
            <th>Up</th>
            <th>Down</th>
        </tr>
        </thead>
        <tbody>
        {% for request in requests %}
            <tr>
                <td>{{ request.id }}</td>
                <td>{{ request.project_id }}</td>
                <td>{{ request.title }}</td>
                <td>{{ request.created_at }}</td>
                <td>{{ request.author.name }}</td>
                <td>{{ request.upvotes }}</td>
                <td>{{ request.downvotes }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No merge request found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</table>