{% extends 'base.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}
    <style>
        body{
            background-color: white;
        }
        div.imgHeader{
            background-color: #653484;
        }
        img{
            width: 60px;
            height: auto;
        }</style>
    <h1>Projects</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>GitLabId</th>
                <td>{{ project.gitLabId }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('projects_index') }}">back to list</a>

    <a href="{{ path('projects_edit', {'gitLabId': project.gitLabId}) }}">edit</a>

    {{ include('projects/_delete_form.html.twig') }}
{% endblock %}
