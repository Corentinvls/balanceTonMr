{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div style="display:flex; flex-direction: row ">
        <nav class="navbar">
            <a href="{{ path('dashboard') }}">
                <img class="img-rounded" src="/assets/img/gitLab.png" alt="logo gitlab">
            </a>
            <a class="btn btn-link" href="{{ path('projects_index') }}">Project</a>
            <a class="btn btn-link" href="{{ path('team_index') }}">Team</a>
            <a class="btn btn-link" href="{{ path('users_index') }}">users</a>
        </nav>

        {% for team in teams %}
            <a href="./team/{{ team.id }}" style="text-decoration: none;">
            <div class="card"
                 style="margin:10px; border:solid 1px; border-radius: 5px; padding: 20px; background: #000050">
                <div class="card-header">
                    <h1 style="color: white;">Equipe {{ team.id }}</h1>
                    <img class="icon" style="width:20rem; height:auto;" src="./assets/img/{{ team.avatarPath }}"
                         alt="logo team"/>

                    <h3 style="color:#d2d2d2; font-size: 5em;">
                        {{ team.name }}
                    </h3>

                </div>
            </div>
            </a>
        {% else %}
            <tr>
                <td colspan="4">no team found</td>
            </tr>
        {% endfor %}

    </div>
{% endblock %}
