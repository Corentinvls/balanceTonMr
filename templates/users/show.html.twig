{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}

    <div class="jumbotron">
        <div class="container">
            <h1>Détails du membre</h1>
            <div class="row">
                <a class="btn btn-primary" href="{{ path('users_edit', {'id': user.id}) }}">Editer</a>
                {{ include('users/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

    <div class="container">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.pseudo }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
        </tbody>
    </table>
    </div>
    <a class="btn btn-link" href="{{ path('users_index') }}">Revenir à la liste</a>
{% endblock %}
