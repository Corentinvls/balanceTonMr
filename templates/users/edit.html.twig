{% extends 'base.html.twig' %}

{% block title %}Edit Users{% endblock %}

{% block body %}
    <h1>Edit Users</h1>

    {{ include('users/_form.html.twig', {'button_label': 'Update'}) }}

    <a class="btn btn-link" href="{{ path('users_index') }}">back to list</a>

    {{ include('users/_delete_form.html.twig') }}

    <h1>Team index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Project</th>
        </tr>
        </thead>
        <tbody>
        {% for team in teams %}
        <tr>
            <td>{{ team.name }}</td>
            <td>{{ team.project ? team.project|join(', ') : '' }}</td>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
